#!/bin/sh
systemctl --user set-environment WAYLAND_DISPLAY="$WAYLAND_DISPLAY"
export XDG_CURRENT_DESKTOP=dwl
systemctl --user set-environment XDG_CURRENT_DESKTOP="$XDG_CURRENT_DESKTOP"
systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=dwl
systemctl --user restart xdg-desktop-portal
systemctl --user restart xdg-desktop-portal-wlr
systemctl --user restart xdg-desktop-portal-gtk
export _JAVA_AWT_WM_NONREPARENTING=1
slstatus -s | dwl -s "sh -c 'swaybg -i /home/lima/dotfiles/wallpaper/wall.jpg &'"
